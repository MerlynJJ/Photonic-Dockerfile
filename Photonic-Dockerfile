#Get image base debian
FROM debian
LABEL authors="Merlyn Jaqueline Juarez Gutierrez <merlynj@icf.unam.mx>, Wolf Luis Moch√°n Backal <mochan@icf.unam.mx>"
#RUN instruction with shell commands as arguments
RUN apt update; \
    apt -y upgrade; \
    apt-get -y install \
    aptitude \
    less \
    cmake \
    cpanminus \
    freeglut3-dev \ 
    gfortran \
    gnuplot-qt \
    make \ 
    netpbm \
    openssh-server \
    tmux \
    sharutils \	
    xterm \
    patch \
    zip \
    csh \
    liblapack-dev \
    libcfitsio-dev \
    libfribidi-dev 
    libgd-dev \
    libgif-dev \
    libgsl-dev \
    libgtk-3-dev \
    libhdf4-dev \
    libhdf5-dev \
    libnetpbm10 \
    libpgplot-perl \
    libproj-dev \
    libterm-readline-perl-perl \
    libreadline-dev \
    libterm-readline-gnu-perl \
    libtiff5-dev \
    libxft-dev \
    libxi-dev \
    libxmu-dev \
    libxrender-dev \
    libopengl-image-perl \
    libopengl-perl \
    libfftw3-dev \
    wget \
#Intall perl, to no to use system's perl
RUN wget -O - https://install.perlbrew.pl |bash \
    && echo source ~/perl5/perlbrew/etc/bashrc >> ~/.bashrc \
    && bash \
    && perlbrew install_cpanm \
    && perlbrew install perl-5.30.3 \
    switch perl-5.30.3 \
#Install some PDL DEPENDENCIES
RUN cpanm \
    Devel::CheckLib \
    File::Spec \
    File::Temp \  
    Pod::Parser \  
    Pod::Select \
    ExtUtils::MakeMaker \
    Test::Exception \
    Text::Balanced \
    Filter::Util::Call \
    Filter::Simple \
    Module::Compile \
    Inline \
    Inline::C \
    Data::Dumper \
    Convert::UU \
    Storable \
    Devel::REPL \
    Term::ReadLine::Perl \
    Term::ReadLine::Gnu \
    Data::Dump::Streamer \
    Sys::SigAction \
    OpenGL \ #FAILED
    PGPLOT \ #FAILED
    File::Map \
    Term::ReadKey \
    Archive::Extract \
    Shell::Config::Generate \
    Shell:Guess \
    Alien::FFTW3 \
    Alien::HDF4 \
    Alien::Proj4 \
#Install PDL and some firends
    cpanm \
    PDL \
    PDL::FFTW3 \
    PDL::LinearAlgebra \
    PDL::IO::GD \
    PDL::IO::CSV \
    PDL::IO::DBI \
RUN cpanm -n \
    PDL::Graphics::Gnuplot
#Photonic, a single shell command
RUN cpanm Photonic
CMD export DISPLAY=:0; bash
